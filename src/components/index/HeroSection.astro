---
import SkillPill from "../Pill.astro";
---

<section id="hero">
  <div class="my-12 flex flex-col-reverse items-center justify-between gap-6 lg:my-24 lg:flex-row">
    <div class="text-center lg:text-start">
      <div>
        <h1 class="mb-4 text-5xl font-semibold lg:text-6xl">Hi, I'm Chris.</h1>
        <p class="mt-2 max-w-xl text-lg text-zinc-800/90">
          A developer with 6 years of experience and lots of passion.
        </p>
      </div>

      <div class="hidden gap-2 md:mt-6 lg:flex">
        <SkillPill title="Full Stack Developer" icon="ri:stack-fill" />
        <SkillPill title="Prompt Engineer" icon="ri:openai-fill" />
        <SkillPill title="Mentor" icon="ri:team-fill" />
      </div>
    </div>

    <img
      src="/christian-tanul-picture.webp"
      alt="Christian Tanul Picture"
      class="size-[160px] rounded-full border border-zinc-600 object-cover transition-all md:size-[240px] lg:h-auto lg:w-[400px] lg:rounded-[4.5rem] lg:object-center lg:shadow-lg"
    />
  </div>
</section>
